<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearDuelistaActivity">

    <EditText
        android:id="@+id/textBoxNombreDuelista"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="344dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="72dp"
        android:background="#E89277"
        android:inputType="text"
        android:maxLines="1"
        android:textAlignment="center"
        android:textColor="#0027FF"
        app:layout_constraintBottom_toTopOf="@+id/botCreaDuelista"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="57dp"
        android:layout_marginEnd="33dp"
        android:text="Nombre:"
        app:layout_constraintBaseline_toBaselineOf="@+id/textBoxNombreDuelista"
        app:layout_constraintEnd_toStartOf="@+id/textBoxNombreDuelista"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/botCreaDuelista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="220dp"
        android:text="Crear Duelista"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textBoxNombreDuelista"
        app:layout_constraintTop_toBottomOf="@+id/textBoxNombreDuelista" />
</androidx.constraintlayout.widget.ConstraintLayout>